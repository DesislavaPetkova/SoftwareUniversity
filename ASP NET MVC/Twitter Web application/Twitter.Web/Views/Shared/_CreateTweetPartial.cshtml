

@using (Html.BeginForm("Create", "Tweets", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-10">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextArea("text", null, new { htmlAttributes = new { @class = "postArea", } })
                    @Html.ValidationMessage("text", null, new { @class = "text-danger" })
                </div>

                <input type="submit" value="Tweet" class="btn btn-default" />
            </div>


        </div>
    </div>
}
